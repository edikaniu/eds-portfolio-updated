# Production Environment Configuration
# Copy this file to .env.production and update with your actual values

# =============================================
# APPLICATION CONFIGURATION
# =============================================
NODE_ENV=production
PORT=3000
NEXTAUTH_URL=https://yourdomain.com
NEXTAUTH_SECRET=your-super-secure-secret-key-minimum-32-characters-long

# =============================================
# DATABASE CONFIGURATION
# =============================================
# PostgreSQL (Required for Vercel deployment)
DATABASE_URL=postgresql://username:password@localhost:5432/portfolio_prod

# Vercel Postgres (Recommended for Vercel deployment)
# DATABASE_URL=postgres://username:password@hostname:5432/database_name

# External PostgreSQL providers (alternatives)
# DATABASE_URL=postgresql://username:password@hostname:5432/database_name

# =============================================
# REDIS CONFIGURATION (for caching)
# =============================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# =============================================
# EMAIL CONFIGURATION
# =============================================
EMAIL_PROVIDER=sendgrid  # Options: gmail, sendgrid, mailgun, ses, smtp
EMAIL_FROM=noreply@yourdomain.com
CONTACT_EMAIL=contact@yourdomain.com
TEST_EMAIL=test@yourdomain.com

# SendGrid Configuration
SENDGRID_API_KEY=your-sendgrid-api-key

# Gmail Configuration (if using Gmail)
EMAIL_USER=your-email@gmail.com
EMAIL_APP_PASSWORD=your-16-character-app-password

# Mailgun Configuration (if using Mailgun)
MAILGUN_USERNAME=postmaster@yourdomain.com
MAILGUN_PASSWORD=your-mailgun-password

# AWS SES Configuration (if using AWS SES)
AWS_SES_ACCESS_KEY=your-aws-access-key
AWS_SES_SECRET_KEY=your-aws-secret-key

# SMTP Configuration (if using custom SMTP)
EMAIL_HOST=smtp.yourdomain.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-smtp-username
EMAIL_PASSWORD=your-smtp-password

# =============================================
# SECURITY CONFIGURATION
# =============================================
JWT_SECRET=your-super-secure-jwt-secret-key-64-characters-long
ENCRYPTION_KEY=your-32-character-encryption-key-for-aes256
ADMIN_SECRET=your-admin-authentication-secret-key

# Session Configuration
SESSION_TIMEOUT=24h
MAX_SESSIONS_PER_USER=5
SESSION_CLEANUP_INTERVAL=3600000  # 1 hour in milliseconds

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_ADMIN_REQUESTS_PER_MINUTE=50

# CORS Configuration
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# =============================================
# EXTERNAL API KEYS
# =============================================
OPENAI_API_KEY=sk-your-openai-api-key-here
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# =============================================
# ADMIN CONFIGURATION
# =============================================
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=your-secure-admin-password-min-12-chars
ADMIN_2FA_SECRET=your-admin-2fa-secret-key

# =============================================
# FILE UPLOAD CONFIGURATION
# =============================================
MAX_FILE_SIZE=10485760  # 10MB in bytes
MAX_FILES_PER_REQUEST=5
UPLOAD_DIR=./uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,webp,pdf,doc,docx,txt,md

# =============================================
# PERFORMANCE & CACHING
# =============================================
CACHE_TTL=3600  # 1 hour in seconds
ENABLE_COMPRESSION=true
ENABLE_STATIC_OPTIMIZATION=true

# Memory Cache Configuration
MEMORY_CACHE_MAX_SIZE=100  # MB
MEMORY_CACHE_TTL=300  # 5 minutes in seconds

# Database Connection Pool
DATABASE_MAX_CONNECTIONS=20
DATABASE_CONNECTION_TIMEOUT=30000  # 30 seconds

# =============================================
# MONITORING & LOGGING
# =============================================
LOG_LEVEL=info  # Options: error, warn, info, debug
ENABLE_ACCESS_LOGS=true
ENABLE_ERROR_TRACKING=true

# Sentry Configuration (Error Tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Webhook URLs for notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/WEBHOOK

# =============================================
# BACKUP CONFIGURATION
# =============================================
ENABLE_AUTO_BACKUP=true
BACKUP_INTERVAL=86400000  # 24 hours in milliseconds
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key-32-chars

# AWS S3 for backup storage (optional)
AWS_S3_BUCKET=your-backup-bucket
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# =============================================
# ANALYTICS CONFIGURATION
# =============================================
ENABLE_ANALYTICS=true
ANALYTICS_BATCH_SIZE=100
ANALYTICS_FLUSH_INTERVAL=30000  # 30 seconds
ANALYTICS_RETENTION_DAYS=365

# Privacy Configuration
RESPECT_DNT=true  # Respect Do Not Track header
ANONYMIZE_IPS=true
COOKIE_CONSENT_REQUIRED=true

# =============================================
# CHATBOT CONFIGURATION
# =============================================
CHATBOT_ENABLED=true
CHATBOT_MAX_RESPONSE_LENGTH=2000
CHATBOT_RATE_LIMIT=10  # messages per minute per user
CHATBOT_SESSION_TIMEOUT=1800000  # 30 minutes

# =============================================
# SEARCH CONFIGURATION
# =============================================
ENABLE_SEARCH=true
SEARCH_INDEX_UPDATE_INTERVAL=3600000  # 1 hour
MAX_SEARCH_RESULTS=50

# =============================================
# CDN & ASSET CONFIGURATION
# =============================================
CDN_URL=https://cdn.yourdomain.com
ENABLE_IMAGE_OPTIMIZATION=true
IMAGE_QUALITY=80
WEBP_ENABLED=true

# =============================================
# SSL & SECURITY HEADERS
# =============================================
FORCE_HTTPS=true
ENABLE_HSTS=true
ENABLE_CSP=true
CSP_REPORT_URI=/api/security/csp-report

# =============================================
# DEVELOPMENT & DEBUG (disable in production)
# =============================================
DEBUG=false
ENABLE_DEBUG_ROUTES=false
SHOW_STACK_TRACES=false
PRISMA_DEBUG=false

# =============================================
# FEATURE FLAGS
# =============================================
FEATURE_BLOG=true
FEATURE_CASE_STUDIES=true
FEATURE_PORTFOLIO=true
FEATURE_CONTACT_FORM=true
FEATURE_NEWSLETTER=true
FEATURE_COMMENTS=false
FEATURE_DARK_MODE=true
FEATURE_MULTILINGUAL=false

# =============================================
# THIRD-PARTY INTEGRATIONS
# =============================================
# Google Services
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Social Media API Keys
TWITTER_API_KEY=your-twitter-api-key
LINKEDIN_CLIENT_ID=your-linkedin-client-id
GITHUB_TOKEN=your-github-token

# Payment Integration (if needed)
STRIPE_PUBLIC_KEY=pk_live_your-stripe-public-key
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# =============================================
# CUSTOM DOMAIN CONFIGURATION
# =============================================
CUSTOM_DOMAIN=yourdomain.com
WWW_REDIRECT=true
SUBDOMAIN_ROUTING=false

# =============================================
# MAINTENANCE MODE
# =============================================
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="Site is temporarily down for maintenance. We'll be back soon!"
MAINTENANCE_ALLOWED_IPS=127.0.0.1,your.ip.address

# =============================================
# NOTIFICATIONS
# =============================================
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=false
NOTIFICATION_FROM_EMAIL=notifications@yourdomain.com

# Admin Notification Settings
NOTIFY_NEW_MESSAGES=true
NOTIFY_ERROR_THRESHOLD=10
NOTIFY_HIGH_TRAFFIC=true

# =============================================
# TIMEZONE & LOCALIZATION
# =============================================
TIMEZONE=UTC
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,es,fr,de

# =============================================
# API CONFIGURATION
# =============================================
API_VERSION=v1
API_RATE_LIMIT=1000  # requests per hour per IP
API_KEY_REQUIRED=false
API_CORS_ENABLED=true

# =============================================
# DOCUMENTATION
# =============================================
# After copying this file:
# 1. Rename to .env.production
# 2. Update all placeholder values
# 3. Ensure secure permissions: chmod 600 .env.production
# 4. Never commit .env.production to version control
# 5. Use strong, unique passwords and secrets
# 6. Enable 2FA for admin accounts
# 7. Regularly rotate secrets and API keys